!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "HaikuZa"
      %meta{:content => content_for?(:description) ? yield(:description) : "Just Add Girls", :name => "description"}
        %link{:href => "http://fonts.googleapis.com/css?family=Ubuntu|Molengo", :rel => "stylesheet", :type => "text/css"}
        = stylesheet_link_tag "application", :media => "all"
        = csrf_meta_tags
        = analytics_init if Rails.env.production?
  %body
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    #main{:role => "main"}
      .container
        .content
          .row
            .span12
              = render 'layouts/messages'
      = yield
    = render 'layouts/footer'
    = yield(:before_body_close)